{
  "name": "nestjs-template",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "pm2:watch-logs": "tail -f $HOME/.pm2/logs/*.log",
    "pm2:dev:start": "yarn build && pm2 start ecosystem.config.js --env development",
    "pm2:dev:stop": "pm2 stop ecosystem.config.js --env development",
    "pm2:dev:delete": "pm2 delete ecosystem.config.js --env development",
    "pm2:dev:reload": "yarn build && pm2 reload ecosystem.config.js --env development",
    "pm2:dev:restart": "pm2 restart ecosystem.config.js --env development",
    "pm2:dev:watch-logs": "tail -f $HOME/.pm2/logs/*.log",
    "pm2:prod:start": "yarn build && pm2 start ecosystem.config.js --env production",
    "pm2:prod:stop": "pm2 stop ecosystem.config.js --env production",
    "pm2:prod:delete": "pm2 delete ecosystem.config.js --env production",
    "pm2:prod:reload": "yarn build && pm2 reload ecosystem.config.js --env production",
    "pm2:prod:restart": "pm2 restart ecosystem.config.js --env production",
    "pm2:prod:watch-logs": "tail -f $HOME/.pm2/logs/*.log",
    "pm2:prod-js:start": "pm2 start ecosystem.config.js --env production",
    "pm2:prod-js:stop": "pm2 stop ecosystem.config.js --env production",
    "pm2:prod-js:delete": "pm2 delete ecosystem.config.js --env production",
    "pm2:prod-js:reload": "pm2 reload ecosystem.config.js --env production",
    "pm2:prod-js:restart": "pm2 restart ecosystem.config.js --env production",
    "pm2:prod-js:watch-logs": "tail -f $HOME/.pm2/logs/*.log"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.7",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.7",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.2.7",
    "@nestjs/swagger": "^7.1.13",
    "@nestjs/typeorm": "^10.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "pg": "^8.8.0",
    "pm2": "^5.2.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.6.0",
    "typeorm": "^0.3.11"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.18",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.7",
    "@types/express": "^4.17.13",
    "@types/jest": "27.5.0",
    "@types/node": "^18.18.4",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "6.5.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.7.0",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
